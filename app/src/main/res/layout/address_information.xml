<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:background="@drawable/white_shape"
            android:padding="@dimen/_10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/addressTypeIcon"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/home"
                    android:paddingEnd="@dimen/_7dp"
                    android:paddingBottom="@dimen/_7dp"
                    android:paddingTop="@dimen/_7dp"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/addressTypeTitle"
                    android:layout_toEndOf="@+id/addressTypeIcon"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/home"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp" />

            </RelativeLayout>

            <TextView
                android:paddingStart="@dimen/_2dp"
                android:id="@+id/fullAddress"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="@dimen/_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</layout>