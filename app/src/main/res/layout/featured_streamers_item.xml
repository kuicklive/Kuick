<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bannerView"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/streamersBanner"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp">

            <ImageView
                android:id="@+id/streamerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/streamreName"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_16sp"
                android:text="Skechers"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/streamerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/country"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="@dimen/_12sp"
                android:text="USA"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/streamerIcon"
                android:layout_below="@+id/streamreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/liveIcon"
                android:layout_marginTop="@dimen/_7dp"
                android:textSize="@dimen/_12sp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toEndOf="@+id/country"
                android:layout_below="@+id/streamreName"
                android:layout_width="@dimen/_10dp"
                android:src="@drawable/pink_circle"
                android:layout_height="@dimen/_10dp" />

            <TextView
                android:layout_marginStart="@dimen/_5dp"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="@dimen/_12sp"
                android:text="10.4K"
                android:drawableLeft="@drawable/pink_circle"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/liveIcon"
                android:layout_below="@+id/streamreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>